{
  "name": "tiny-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Tiny ERP (Olist) API integration with OAuth 2.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tiny-mcp-server": "dist/index.js",
    "tiny-mcp-auth": "dist/auth-cli.js",
    "tiny-mcp-http": "dist/http-server.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "auth": "node dist/auth-cli.js",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http-server.ts",
    "build": "tsc",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.7.9",
    "open": "^10.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "mcp",
    "tiny",
    "olist",
    "erp",
    "api",
    "oauth2"
  ],
  "author": "",
  "license": "MIT"
}
